for_window [instance="lightdm-gtk-greeter-settings"] floating enable
for_window [instance="dropbox"] floating enable
for_window [instance="guake"] floating enable
for_window [instance="keepassxc"] floating enable
for_window [instance="steam"] floating enable
for_window [instance="sxiv"] floating enable
for_window [instance="love"] floating enable

# Enable gaps
gaps outer 10
gaps inner 10

# Change gap size
bindsym $mod+Shift+g gaps outer all minus 5; gaps inner all minus 5
bindsym $mod+g gaps outer all plus 5; gaps inner all plus 5

# Add border to all windows
for_window [class="^.*"] border pixel 2

